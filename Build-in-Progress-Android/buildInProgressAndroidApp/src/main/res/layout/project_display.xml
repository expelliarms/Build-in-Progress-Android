<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="4dp" >

    <ImageView
        android:id="@+id/project_avatar_all_project_display"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/action_settings"
        android:maxHeight="100dp"
        android:minHeight="100dp"
        android:scaleType="centerCrop"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/project_description_all_project_display"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/grey_transparent"
        android:padding="4dp"
        android:text="@string/project_description_allProjecDisplay"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/project_built"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/add_image"
        android:src="@drawable/built_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/project_collaborative"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/add_image"
        android:src="@drawable/collaborators_icon"
        android:visibility="gone" />

</RelativeLayout>