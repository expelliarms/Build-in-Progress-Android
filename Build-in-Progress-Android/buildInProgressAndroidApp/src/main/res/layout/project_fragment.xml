<!-- VCJ: Changed from RelativeLayout To FrameLayout for swipe view, so
 I could use the playLocalVideo function -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dslv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ProjectFragment"
    android:id="@+id/fragment_relative_layout">

    <com.mobeta.android.dslv.DragSortListView
        android:id="@+id/project_fragment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:dividerHeight="0dp"
        android:drawSelectorOnTop="true"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        dslv:collapsed_height="10dp"
        dslv:drag_enabled="true"
        dslv:drag_handle_id="@drawable/handle_icon"
        dslv:drag_scroll_start="0.33"
        dslv:drag_start_mode="onMove"
        dslv:float_alpha="0.6"
        dslv:max_drag_scroll_speed="0.5"
        dslv:remove_enabled="false"
        dslv:remove_mode="flingRemove"
        dslv:slide_shuffle_speed="0.3"
        dslv:sort_enabled="true"
        dslv:track_drag_sort="false"
        dslv:use_default_controller="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

</RelativeLayout>