<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="publish_theme" parent="@android:style/Theme.Dialog">
		<item name="android:windowBackground">@color/grey_transparent</item>
		<item name="android:windowIsFloating">true</item>
	</style>
	
    
    <!-- Clear Action Bar Styling -->
    <style name="clearActionBar" parent="Theme.Sherlock.Light">
  		<item name="android:windowActionBarOverlay">true</item>
  		<item name="background">@color/white</item>
    </style>
	
    
	<!-- Dialog for Share Activity -->
	<style name="dialog_light" parent="@android:style/Theme.Dialog">
	    <item name="@android:windowBackground">@color/white</item>
	    <item name="@android:textColor">@color/black</item>        
	</style>

	
	<style name="ActionBar" parent="@style/Widget.Sherlock.ActionBar">
	    <item name="android:background">#64000000</item>
	    <item name="background">#64000000</item>
	    
	</style>
	
	<!-- Published On Dialog Styles -->
	<style name="radio_button_style" parent="@android:style/Widget.CompoundButton">
	    <item name="android:background">@drawable/custom_radio_button</item>
	    <item name="android:button">@null</item>
	</style>
	
	<style name="step_info" parent="AppBaseTheme">
	    <item name="android:background">@color/grey_light</item>
	    <item name="android:visibility">gone</item>
	    <item name="android:paddingTop">5dp</item>
	    <item name="android:paddingRight">10dp</item>
	    <item name="android:paddingBottom">5dp</item>
	    <item name="android:paddingLeft">10dp</item>
	    <item name="android:textSize">16sp</item>
	</style>

	<style name="SampleTheme.Light" parent="@style/Theme.Sherlock.Light"></style>
